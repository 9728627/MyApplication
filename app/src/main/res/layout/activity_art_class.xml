<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_art_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xterstar.www.placeholder.artClass">

    <TextView
        android:text="Art/Music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView12"
        tools:textSize="36sp"
        tools:textStyle="bold" />

    <Button
        android:text="Art 1a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_toLeftOf="@+id/textView12"
        android:layout_toStartOf="@+id/textView12"
        android:layout_marginTop="19dp"
        android:id="@+id/button28" />

    <Button
        android:text="Art 7c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button28"
        android:layout_centerHorizontal="true"
        android:id="@+id/button29" />

    <Button
        android:text="Art 7d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button29"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:id="@+id/button30" />

    <Button
        android:text="Arthi 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button28"
        android:layout_alignLeft="@+id/button28"
        android:layout_alignStart="@+id/button28"
        android:layout_marginTop="24dp"
        android:id="@+id/button31" />

    <Button
        android:text="Arthi 6b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button31"
        android:layout_alignRight="@+id/button29"
        android:layout_alignEnd="@+id/button29"
        android:id="@+id/button32" />

    <Button
        android:text="Mus 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button32"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button33" />

    <Button
        android:text="Mus 15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button34"
        android:layout_alignLeft="@+id/button32"
        android:layout_alignStart="@+id/button32"
        android:id="@+id/button35" />

    <Button
        android:text="Mus 11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/button34"
        android:layout_below="@+id/button31"
        android:layout_alignLeft="@+id/button31"
        android:layout_alignStart="@+id/button31" />

    <Button
        android:text="Mus 17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button35"
        android:layout_alignLeft="@+id/button33"
        android:layout_alignStart="@+id/button33"
        android:id="@+id/button36" />

    <TextView
        android:text="More to be added soon..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button35"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/textView13"
        tools:textSize="30sp" />

</RelativeLayout>
