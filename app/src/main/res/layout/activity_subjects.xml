<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subjects"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xterstar.www.placeholder.Subjects"
    android:background="@color/colorWhite">

    <TextView
        android:text="Subjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColorLink="@android:color/holo_green_light"
        tools:textColor="@color/colorPrimaryLight"
        tools:textStyle="bold"
        android:soundEffectsEnabled="?attr/isLightTheme" />

    <Button
        android:text="Computer Science"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/csbutton"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="             Math              "
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/csbutton"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:id="@+id/mathbutton" />

    <Button
        android:text="          Physics          "
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/physicsbutton"
        android:layout_alignBaseline="@+id/chembutton"
        android:layout_alignBottom="@+id/chembutton"
        android:layout_alignLeft="@+id/mathbutton"
        android:layout_alignStart="@+id/mathbutton" />

    <Button
        android:text="        Economics        "
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/chembutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/econbutton" />

    <Button
        android:text="           Poli Sci          "
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/econbutton"
        android:layout_alignLeft="@+id/physicsbutton"
        android:layout_alignStart="@+id/physicsbutton"
        android:id="@+id/polibutton"
        android:layout_alignBottom="@+id/econbutton" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:id="@+id/psychbutton"
        android:layout_below="@+id/econbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="      Psychology      " />

    <Button
        android:text="Communications"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/psychbutton"
        android:layout_alignLeft="@+id/polibutton"
        android:layout_alignStart="@+id/polibutton"
        android:id="@+id/commbutton" />

    <Button
        android:text="         Art/Music        "
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:id="@+id/artbutton"
        android:layout_below="@+id/psychbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="        Ethnicity        "
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/artbutton"
        android:layout_alignLeft="@+id/commbutton"
        android:layout_alignStart="@+id/commbutton"
        android:id="@+id/ethbutton" />

    <Button
        android:text="            Other            "
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:id="@+id/otherbutton" />

    <Button
        android:text="        Chemistry        "
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:id="@+id/chembutton"
        android:layout_below="@+id/csbutton"
        android:layout_alignRight="@+id/artbutton"
        android:layout_alignEnd="@+id/artbutton" />

</RelativeLayout>
